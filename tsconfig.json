{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "es6",
      "es2017",
      "es2020",
      "esnext.asynciterable"
    ],
    "useUnknownInCatchVariables": false,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "@interfaces/*": [
        "./interfaces/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "src/global.d.ts"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "app/**/*.js",
    "src/**/*.js"
  ]
}
