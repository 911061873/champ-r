{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "es6",
      "es2017",
      "es2020",
      "esnext.asynciterable"
    ],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "./src/*"
      ]
    }
  },
  "exclude": [
    "node_modules/"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js"
  ]
}
